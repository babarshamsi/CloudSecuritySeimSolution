<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailScreenActivity">

    <ImageView
        android:id="@+id/screenshot"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        />

    <TextView
        android:id="@+id/imageNotFound"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Image Not Found"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_below="@+id/screenshot"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:visibility="gone"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_alignBottom="@+id/imageNotFound"
        android:layout_below="@+id/imageNotFound"
        android:layout_marginTop="50dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/unblock"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/status"
        android:gravity="center"
        android:text="Un Block"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>





</RelativeLayout>